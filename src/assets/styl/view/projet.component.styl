.items
	.item
		position relative
		width 800px
		height 150px

		background-color white
		border-radius 6px
		margin 20px 0
		padding-right 40px
		cursor pointer

		.media
			width 25%
			height 150px
			overflow hidden
			margin-right 40px
			border-top-left-radius 6px
			border-bottom-left-radius 6px

			img
				width auto
				height 100%

		.descriptif
			width 74%

			p
				font-size 1.3rem


		.more
			position absolute
			background-color red
			border-radius 50%

			top 50%
			right -24px

			transform translateY(-50%)
			width 48px
			height 48px


	.item:nth-child(even)
		-ms-align-self flex-end
		-webkit-align-self flex-end
		align-self flex-end
