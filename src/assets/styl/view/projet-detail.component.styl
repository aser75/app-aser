.details-hack
	padding-bottom 60px

.details,
.other
	width 800px
	margin 0 auto
	background-color white
	box-shadow 0px 0px 5px 0px rgba(0,0,0,0.2)
	border-radius 6px
	overflow hidden

.details
	margin-bottom 40px

	.title
		height 40px
		background linear-gradient(45deg, #40c4ff, #0091ea)

		h1
			border none
			margin 0
			text-align center

	.padding
		padding 40px

	.horizontal.justified
		margin-bottom 20px

		h2
			margin-bottom 0


.other
	padding-top 10px

	.inside
		margin-left 70px
		margin-right 70px

		.layout.horizontal
			a
				border-radius 6px
				overflow hidden

				img
					width 100%

		h3
			margin-top 30px
			padding-top 20px
			text-align center
			border-top 1px solid #b0bec5
		
		a
			width 200px
			height 150px