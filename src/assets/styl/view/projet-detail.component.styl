.details-hack
	padding-bottom 60px

.details,
.other
	width 800px
	margin 0 auto
	background-color white
	box-shadow 0px 0px 5px 0px rgba(0,0,0,0.2)
	border-radius 6px
	overflow hidden

.details
	margin-bottom 40px

	.title
		height 40px
		background linear-gradient(45deg, #40c4ff, #0091ea)

		h1
			border none
			margin 0
			text-align center

	.padding
		padding 40px

	.horizontal.justified
		margin-bottom 20px

		h2
			margin-bottom 0


.other
	padding-top 10px

	.inside
		margin-left 70px
		margin-right 70px

		.layout.horizontal
			a
				border-radius 6px
				overflow hidden
				transform scale(0.97)
				transform-origin bottom center

				img
					width 100%

				&:hover
					transform scale(1) translateY(-3px)
					box-shadow 0px 3px 6px 0px rgba(0,0,0,0.32)

		h3
			margin-top 30px
			padding-top 20px
			text-align center
			border-top 1px solid #b0bec5
		
		a
			width 200px
			height 150px



@media (max-width: 800px)
	.details-hack
		padding-left 20px
		margin-right 20px

	.details,
	.other
		width 100%

	.other
		.inside
			margin-left 20px
			margin-right 20px

@media (max-width: 750px)
	.other
		.inside
			> div
				-ms-flex-direction column
				-webkit-flex-direction column
				flex-direction column
				-ms-flex-align center
				-webkit-align-items center
				align-items center

				a
					margin-top 20px
					margin-bottom 20px