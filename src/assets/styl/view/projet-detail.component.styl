.hackBg
	position absolute
	position absolute
	display block
	height 60%
	width 100%
	bottom 0
	left 0
	right 0
	background-color #F5F5F5
	z-index -1

.details-hack
	padding-bottom 60px

.details,
.other
	width 800px
	margin 0 auto
	background-color white
	box-shadow 0px 0px 5px 0px rgba(0,0,0,0.2)
	border-radius 6px
	overflow hidden

.details
	margin-bottom 40px

	.title
		height 40px
		background linear-gradient(45deg, #40c4ff, #0091ea)

		h1
			border none
			margin 0
		    -webkit-margin-after 0

	.padding
		padding 40px

	.horizontal.justified
		margin-bottom 20px

		h2
			margin-bottom 0


.other
	padding-top 10px

	.inside
		margin-left 70px
		margin-right 70px

		.layout.horizontal
			a
				border-radius 6px
				overflow hidden

		h3
			margin-top 30px
			padding-top 20px
			text-align center
			border-top 1px solid #b0bec5
		
		a
			width 200px
			height 150px