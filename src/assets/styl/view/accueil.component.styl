.container
	width 800px !important
	position relative

	h1
		transform rotate(-15deg)
		z-index 20
		position absolute
		top -90px
		left 80px

		span
			text-align right	

	> div
		position relative
		z-index 10

		.shape_img
			width 322px
			height 322px
			margin-right 25px
	
			display inline-block
			position relative
			
			border-radius 50%
			-webkit-shape-outside circle()
			shape-outside circle()
			float left

			.bulle
				perspective 800px
	
			.shadow
				position absolute

			.shadow
				left 0
				bottom -30px

		.shape_icon
			position absolute
			width 300px
			height 300px

			top 0
			left -90px
			perspective 300px

			.phone,
			.pen
				transform-origin 100% 100%
				position absolute

			.phone
				top 60%
				left -70px
				position absolute

			.pen
				top 55%
				position absolute 
				left -60px
	
		p
			color white
			padding-top 55px
			text-align justify

		.bt
			float right
			margin-top 15px

