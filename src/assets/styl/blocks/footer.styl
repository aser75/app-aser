footer
	position relative
	z-index 20

	width 100%
	height 40px

	padding 15px 0
	margin 0 auto
	text-align center

	color white
	font-size 1rem

	transition background anime

	a
		text-decoration underline

	.git
		display inline-block
		height 15px
		width 15px

		&:after
			height 15px
			width 15px

footer.bgBlack
	background-color rgba(0,0,0,0.15)

	.git
		&:after
			content url('../images/icone-git_white.svg')


body:not(.accueil) footer
	color default-gris
	background white url('../images/bg-footer.png')repeat left top
	background-size contain !important
	box-shadow inset shadow1

	height 80px
	padding 37px 0
