input[type="text"],
input[type="url"],
input[type="password"],
input[type="email"],
input[type="tel"],
input[type="date"],
input[type="time"]
	width 100%
	background-color white
	border-radius (4px)
	border 1px solid type
	height 40px
	padding 0 20px
	margin-bottom 20px
	font-family 'Noto Sans', serif
	font-size 1.4rem


input[type="submit"]
	background-color default-white
	height 40px
	text-align center
	font-size 1.2rem
	width 100%
	color white
	text-transform uppercase
	margin-top 20px
	border none

textarea
	width 100%
	background-color white
	border-radius (4px)
	border 1px solid type
	padding 10px 20px
	margin-bottom 20px

&::-webkit-input-placeholder
	font-size 11px
	color default-white
	opacity 1

&:-moz-placeholder
	font-size 11px
	color default-white
	opacity 1

&::-moz-placeholder
	font-size 11px
	color default-white
	opacity 1

&:-ms-input-placeholder
	font-size 11px
	color default-white
	opacity 1

form
	margin 40px 0

	.form-group
		margin 0 10px

	.ng-invalid:not(form)
		border-left 4px solid default-orange

	input:focus,
	textarea:focus
		box-shadow 0px 0px 4px 0px rgba(0,0,0,0.2)
		border none
		background-color rgba(176,190,197,0.25)

	.btn
		border none
		cursor pointer

	button[disabled]:hover,
	button[disabled]
		background rgba(176,190,197,0.9)
		box-shadow none
		cursor inherit
		transform scale(1)

/*
** Input select
*/
.cdk-overlay-container
	position fixed
	z-index 1000
	pointer-events none
	top 0
	left 0
	height 100%
	width 100%

.cdk-overlay-backdrop,
.cdk-overlay-pane
	position absolute
	z-index 1000

.mat-form-field-label-wrapper
	top -.84375em
	padding-top .84375em

.mat-input-wrapper
	background linear-gradient(90deg, #40C4FF, #0091EA)
	padding 0 10px 7px !important
	border-top-left-radius 6px
	border-top-right-radius 6px
	transition(0.2s ease)
	box-shadow 0 5px 5px -3px rgba(0,0,0,.1), 0 8px 10px 1px rgba(0,0,0,.07), 0 3px 14px 2px rgba(0,0,0,.06);

.mat-form-field-should-float
	.mat-input-wrapper
		padding 5px 10px 7px !important

.mat-form-field-underline
	background-color transparent !important
	display none !important

.mat-form-field-label
	color white !important
	font-family 'Noto Sans', serif !important
	font-weight bold !important
	text-transform uppercase
	padding-bottom 5px

.mat-select-value
	color white !important
	font-family 'Noto Sans', serif !important
	font-weight bold !important
	text-transform uppercase

.mat-select-arrow
	color white !important

.mat-form-field-infix
	border-top .7em solid transparent !important

.mat-select-panel .mat-optgroup-label,
.mat-select-panel .mat-option
	line-height 2.5em !important
	height 2.5em !important
	color titre	!important
	font-family 'Noto Sans', serif !important

.mat-form-field-can-float.mat-form-field-should-float .mat-form-field-label
	font-size 11px !important
	transform translateY(-1.08125em) scale(.75) perspective(100px) translateZ(.001px) !important