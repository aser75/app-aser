anime01 	 = 0.1s ease
anime  		 = 0.2s ease
anime04 	 = 0.4s ease

/*
** Animation logo
*/

.logo:hover
	.circle
		display block
		width 100px
		height 100px
		z-index -1

		border 1px solid white
		border-radius 50%
		
		position absolute
		top -10px
		
		-webkit-animation circleAnime 0.4s ease
		-moz-animation circleAnime 0.4s ease
		animation circleAnime 0.4s ease
		opacity 0

/*
** Animation Items
*/

.items
	.item
		transition(anime)
		box-shadow 0px 0px 4px 0px rgba(0,0,0,0.2)

		.more
			box-shadow 0px 0px 6px 0px rgba(0,0,0,0.25)
			transition(anime)
			transform translateY(-50%)
			width 48px
			height 48px

	.item:hover
		transform(scale(1.04))
		box-shadow 0px 0px 8px 0px rgba(0,0,0,0.32)

		.more
			transform(translateY(-50%), scale(0.8))
			box-shadow none
			opacity 0

.bt.bleu
	transition(anime)
	transform(scale(1))
	box-shadow 0px 0px 8px 0px rgba(0,0,0,0.0)

	&:hover
		transform(scale(1.04))
		box-shadow 0px 0px 8px 0px rgba(0,0,0,0.25)


/*
** Animation Actif Bouton
*/

#actifBt
	transition(0.4s ease-in)				


/*
** Animation accueil bt
*/

.clip-polygon
	clip-path url(#myClip)
	top 50%
	left 3px
	position absolute
	transform translateY(-32.8%)
	opacity 0
	animation-name clip
	animation-duration 1s
	animation-delay 1.1s
	animation-fill-mode forwards

/*
** Animation Canvas
*/
canvas
	width 100%
	height 100%
	position absolute
	top 0


/*
** Key frames
*/
@keyframes clip
	0%{opacity : 0}
	100%{opacity:1}

@keyframes circleAnime
	0%{opacity: 0.0;border 1px solid white}
	30%{opacity: 0.8;border 5px solid white;}
	100%{opacity: 0;transform: scale(1.5);border 1px solid white;}

@keyframes menuAnime
	0%{	background-color: white;}
	100%{ background-color: bg;}

@keyframes hackBg
	0%{	background-color: transparent;}
	90%{ background-color: transparent;}
	100%{ background-color: #F5F5F5;}

@keyframes background
	0%{background-position:0% 50%}
	50%{background-position:100% 50%}
	100%{background-position:0% 50%}

@keyframes rotation
	0%{transform: rotate(0deg)}
	25%{transform: rotate(4deg)}
	50%{transform: rotate(0deg)}
	75%{transform: rotate(-4deg)}
	100%{transform: rotate(0deg)}