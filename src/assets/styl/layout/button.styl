.back
	background-color rgba(0,0,0,0.2)
	width 40px
	height 40px
	display inline-block

	img
		width 16px
		height 16px

.lien
	padding 8px 20px
	background linear-gradient(45deg, #40c4ff, #0091ea)
	color white
	font-size 1.6rem
	font-family 'Noto Sans', serif
	font-weight 700
	border-radius 6px
	box-shadow 0px 1px 4px 0px rgba(0,0,0,0.2)
	transition(all 0.2s ease)
	transform-origin bottom center

	&:hover
		box-shadow 0px 3px 6px 0px rgba(0,0,0,0.32)
		transform(scale(1.03) translateY(-3px))

.bt-close
	display block
	width 40px
	height 40px
	border-radius 50%
	border 1px solid default-orange
	cursor pointer
	position relative
	transition(all 0.4s ease)

	&:hover
		border 3px solid #c55f13

		.close
			&::before,
			&::after
				background #c55f13